@using WNPP_WEB.Models
@model List<BranchViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["MenuName"] = "B0";
    ViewData["MenuListB"] = "show";
    ViewData["MenuB0"] = "active";

    //var data = ViewBag.Message;
}
<div class="card card-plain">
    <div class="card-header card-header-rose card-header-text">
        <div class="card-text">
            <h4 class="card-title">งานทะเบียนสาขา</h4>
        </div>
    </div>
    <div class="card-body ">
        <form method="post" action="/Branch/SearchBranch00" class="form-horizontal">
            <div class="row">
                <label class="col-sm-2 col-form-label">คำค้น</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="txtSearch" class="form-control">
                        <span class="bmd-help">ระบุคำที่ต้องการคัดค้นในทะเบียนสาขา, สาขาสำรอง, สาขาสำรวจ.</span>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-rose">ค้นหา</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model != null)
{
    <div class="card ">
        <div class="card-body">
            <div class="toolbar">
                <!--        Here you can write extra buttons/actions for the toolbar              -->
            </div>
            <div class="material-datatables">
                <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                    <thead>
                        <tr>
                            <th>สาขา</th>
                            <th>วัด/ที่พักสงฆ์</th>
                            <th>ชื่อ/ฉายา</th>
                            <th>เบอร์โทร</th>
                            <th>ที่อยู่</th>
                            <th>ตำบล</th>
                            <th>อำเภอ</th>
                            <th>จังหวัด</th>
                            <th>ประเทศ</th>
                            <th>รหัส</th>
                            <th>ข้อมูลอุปสมบท</th>
                            <th class="disabled-sorting text-right">Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>สาขา</th>
                            <th>วัด/ที่พักสงฆ์</th>
                            <th>ชื่อ/ฉายา</th>
                            <th>เบอร์โทร</th>
                            <th>ที่อยู่</th>
                            <th>ตำบล</th>
                            <th>อำเภอ</th>
                            <th>จังหวัด</th>
                            <th>ประเทศ</th>
                            <th>รหัส</th>
                            <th>ข้อมูลอุปสมบท</th>
                            <th class="text-right">Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BranchName</td>
                                <td>@item.MonasteryName</td>
                                <td>@item.AbbotName</td>
                                <td>@item.MonasteryPhoneNO</td>
                                <td>@item.AddressTextMonatery</td>
                                <td>@item.SubDistrictMonatery</td>
                                <td>@item.DistrictMonatery</td>
                                <td>@item.ProvinceMonatery</td>
                                <td>@item.CountryMonatery</td>
                                <td>@item.PostCodeMonatery</td>
                                <td>@item.Notation</td>
                                <td class="text-right">
                                    <a href="/Branch/EditBranch/@item.Id" class="btn btn-link btn-danger btn-just-icon edit" data-toggle="tooltip" data-placement="top" title="แก้ไขข้อมูล"><i class="material-icons">handyman</i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
}









