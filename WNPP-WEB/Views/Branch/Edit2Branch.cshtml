                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group bmd-form-group">
                                <input type="text" class="form-control" placeholder="สังกัดวัด" name="AbbotTemple" value="@Model.AbbotTemple">
                                <span class="bmd-help">สังกัดวัด</span>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group bmd-form-group">
                                <input type="text" class="form-control" placeholder="วิทยะฐานะ" name="EcclesiasticalTitle" value="@Model.EcclesiasticalTitle">
                                <span class="bmd-help">ประถม / มัธทยม /ปริญญา </span>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group bmd-form-group">
                                <input type="text" class="form-control" placeholder="ปริยัติ" name="AbbotTitle" value="@Model.AbbotTitle">
                                <span class="bmd-help">นักธรรม ตรี/โท/เอก , เปรียญ </span>
                            </div>
                        </div>

