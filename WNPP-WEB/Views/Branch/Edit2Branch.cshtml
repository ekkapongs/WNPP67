@using WNPP_WEB.Models
@model TBranch
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var check1 = (Model.BranchType == 1) ? "checked" : "";
    var check2 = (Model.BranchType == 2) ? "checked" : "";
    var check3 = (Model.BranchType == 3) ? "checked" : "";
    var check4 = (Model.BranchType == 4) ? "checked" : "";
}
@functions {
    public string convert2ThaiDate(DateTime? data)
    {
        if (data == null)
            return "";
        else
            data = ((DateTime)data).AddYears(543);
        return ((DateTime)data).ToString("dd/MM/yyyy");
    }
}
<div class="card">
    <div class="card-header card-header-rose card-header-text">
        <div class="card-text">
            <h4 class="card-title">ลงทะเบียนสาขา</h4>
        </div>
    </div>
    <div class="card-body ">
        <form asp-controller="Branch" asp-action="Edit2Branch" method="post" class="form-horizontal" id="branchForm" name="branchForm">
            <div class="row">
                <label class="col-sm-2 col-form-label label-checkbox">ประเภทสาขา</label>
                <div class="col-sm-10 checkbox-radios">
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="BranchType" value="@Model.BranchType" @check1> สาขา
                            <span class="circle">
                                <span class="check"></span>
                            </span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="BranchType" value="@Model.BranchType" @check2> สำรอง
                            <span class="circle">
                                <span class="check"></span>
                            </span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="BranchType" value="@Model.BranchType" @check3> สำรวจ
                            <span class="circle">
                                <span class="check"></span>
                            </span>
                        </label>
