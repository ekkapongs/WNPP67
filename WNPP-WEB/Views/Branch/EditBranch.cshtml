@using WNPP_WEB.Models
@model TBranch
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    //ViewData["MenuName"] = "B5";
    ViewData["MenuListB"] = "show";
    //ViewData["MenuB5"] = "active";
}
<div class="card">
    <div class="card-header card-header-rose card-header-text">
        <div class="card-text">
            <h4 class="card-title">งานทะเบียนสาขา</h4>
        </div>
    </div>
    <div class="card-body ">
        <form enctype="multipart/form-data" asp-controller="File" asp-action="PostAbbotImage" method="post">
            <div class="row">
                <label class="col-sm-2 col-form-label">ภาพถ่าย</label>
                <div class="col-sm-10">
                    <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                        <div class="fileinput-new thumbnail">
                            <img src="/assets/imgs/monk-icon.jpg" alt="...">
                        </div>
                        <div class="fileinput-preview fileinput-exists thumbnail"></div>
                        <div>
                            <span class="btn btn-default btn-sm btn-file">
                                <span class="fileinput-new">เลือกรูปจากเครื่อง</span>
                                <span class="fileinput-exists">เปลี่ยนรูป</span>
                                <input id="FileUploadFormFile" type="file" name="FileUploadFormFile" />
                            </span>
                            <a href="#pablo" class="btn btn-danger btn-sm fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> ยกเลิก</a>
                        </div>
                        <button type="submit" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="บันทึกข้อมูล">
                            <i class="material-icons">save_as</i>
                            บันทึกข้อมูล
                        </button>
                        <input type="hidden" id="AbbotImageId" name="AbbotImageId" class="form-control" value="">
                        <input type="hidden" id="DataId" name="DataId" class="form-control" value="@Model.Id">
                        <input type="hidden" id="AbbotName" name="AbbotName" class="form-control" value="@Model.AbbotName">
                        <input type="hidden" id="CallBackPath" name="CallBackPath" class="form-control" value="">
                    </div>
                </div>
            </div>
        </form>
        <form asp-controller="Branch" asp-action="EditBranch" method="post" class="form-horizontal">
            <div class="row">
                <label class="col-sm-2 col-form-label">ลำดับที่</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="BranchName" class="form-control" value="@Model.BranchName">
                        <span class="bmd-help">ตัวอย่าง, สาขาที่ xxx, สำรองที่ xxx, สำรวจที่ xxx (ลำดับเป็นเลข 3 หลัก)</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">ชื่อสถานที่</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="MonasteryName" class="form-control" value="@Model.MonasteryName">
                        <span class="bmd-help">ตามกฏหมาย สำนักสงฆ์ -> ที่พักสงฆ์</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">ที่อยู่</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="AddressTextMonatery" class="form-control" value="@Model.AddressTextMonatery">
                        <span class="bmd-help">บ้านเลขที่ .. หมู่ที่ .. หมู่บ้าน .. ถนน ..</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">แขวง/ตำบล</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="SubDistrictMonatery" class="form-control" value="@Model.SubDistrictMonatery">
                        <span class="bmd-help">แขวง/ตำบล </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">เขต/อำเภอ</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="DistrictMonatery" class="form-control" value="@Model.DistrictMonatery">
                        <span class="bmd-help">เขต/อำเภอ</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">จังหวัด</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="ProvinceMonatery" class="form-control" value="@Model.ProvinceMonatery">
                        <span class="bmd-help">จังหวัด</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">ประเทศ</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="CountryMonatery" class="form-control" value="@Model.CountryMonatery">
                        <span class="bmd-help">ประเทศ</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">รหัสไปรษณีย์</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="PostCodeMonatery" class="form-control" value="@Model.PostCodeMonatery">
                        <span class="bmd-help">รหัสไปรษณีย์</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">เบอร์ติดต่อ</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="MonasteryPhoneNo" class="form-control" value="@Model.MonasteryPhoneNo">
                        <span class="bmd-help">เบอร์โทรวัด. เบอร์โทรมัคนายก, เบอร์เจ้าอาวาส </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">ชื่อเจ้าอาวาส/ประธานสงฆ์</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="AbbotName" class="form-control" value="@Model.AbbotName">
                        <span class="bmd-help">ราชทินนาม ชื่อ ฉายา เช่น พระเทพวชิรญาณ (เลี่ยม ฐิตธมฺโม) </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">เกิด เมื่อ</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" class="form-control datepicker" name="DateOfBirth" value="@((DateTime)Model.DateOfBirth).ToString(" MM /dd/yyyy")">

                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">อุปสมบท เมื่อ</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" class="form-control datepicker" name="DateOfOrdination" value="@((DateTime)Model.DateOfOrdination).ToString(" MM /dd/yyyy")">

                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">ชื่อ ของผู้รับรอง</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="CertifierName" class="form-control" value="@Model.CertifierName">
                        <span class="bmd-help">ชื่อ / ฉายา (พระเถระสายวัดหนองป่าพง)</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">วัด ของผู้รับรอง</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="CertifierTemple" class="form-control" value="@Model.CertifierTemple">
                        <span class="bmd-help">วัดสาขา (พระเถระสายวัดหนองป่าพง)</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">Hidden Text Box (Parameter)</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="text" name="AbbotImageUrl" class="form-control" value="@Model.AbbotImageUrl">
                    </div>
                </div>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-success" data-toggle="tooltip" data-placement="top" title="บันทึกข้อมูล">
                    <i class="material-icons">save_as</i>
                    บันทึกข้อมูล
                </button>
            </div>

        </form>
    </div>
</div>