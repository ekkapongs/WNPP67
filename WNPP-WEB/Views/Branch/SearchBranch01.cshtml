@using WNPP_WEB.Models
@model List<BranchViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["MenuName"] = "B1";
    ViewData["MenuListB"] = "show";
    ViewData["MenuB1"] = "active";

    //var data = ViewBag.Message;
}
<div class="card">
    <div class="card-header card-header-rose card-header-text">
        <div class="card-text">
            <h4 class="card-title">B1 คัดค้นสาขา</h4>
        </div>
    </div>
    <div class="card-body">
        <div class="toolbar">
            <!--        Here you can write extra buttons/actions for the toolbar              -->
        </div>
        <div class="material-datatables">
            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                <thead>
                    <tr>
                        <th></th>
                        <th>สาขา</th>
                        <th>วัด/ที่พักสงฆ์</th>
                        <th>ชื่อ/ฉายา</th>
                        <th>เบอร์โทร</th>
                        <th>ที่อยู่</th>
                        <th>ตำบล</th>
                        <th>อำเภอ</th>
                        <th>จังหวัด</th>
                        <th>ประเทศ</th>
                        <th>รหัส</th>
                        <th>ข้อมูลอุปสมบท</th>
                        <th class="disabled-sorting text-right">Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th></th>
                        <th>สาขา</th>
                        <th>วัด/ที่พักสงฆ์</th>
                        <th>ชื่อ/ฉายา</th>
                        <th>เบอร์โทร</th>
                        <th>ที่อยู่</th>
                        <th>ตำบล</th>
                        <th>อำเภอ</th>
                        <th>จังหวัด</th>
                        <th>ประเทศ</th>
                        <th>รหัส</th>
                        <th>ข้อมูลอุปสมบท</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (string.IsNullOrEmpty( item.AbbotImageUrl))
                                {
                                    <img class="img" src="~/assets/imgs/NoDataMonk.jpg" />
                                }
                                else
                                {
                                    <img class="img" src="@item.AbbotImageUrl" />
                                }
                                
                            </td>
                            <td>@item.BranchName</td>
                            <td>@item.MonasteryName</td>
                            <td>@item.AbbotName</td>
                            <td>@item.MonasteryPhoneNO</td>
                            <td>@item.AddressTextMonatery</td>
                            <td>@item.SubDistrictMonatery</td>
                            <td>@item.DistrictMonatery</td>
                            <td>@item.ProvinceMonatery</td>
                            <td>@item.CountryMonatery</td>
                            <td>@item.PostCodeMonatery</td>
                            <td>@item.Notation</td>
                            <td class="text-right">
                                <a href="/Branch/Edit2Branch/@item.Id"
                                   class="btn btn-link btn-danger btn-just-icon edit"
                                   data-toggle="tooltip" data-placement="top"
                                   title="แก้ไขข้อมูล"><i class="material-icons">handyman</i></a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>