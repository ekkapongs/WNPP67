@using WNPP_WEB.Models.ViewModels;
@model List<PhanSaViewModel>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="card">
    <div class="card-body ">
        <a class="btn btn-primary" asp-area="" asp-controller="Monk" asp-action="BuddhistLent">
            <i class="material-icons">calendar_month</i>
            <span class="sidebar-normal">ตารางข้อมูลพรรษา </span>
        </a>
        <a class="btn btn-primary" asp-area="" asp-controller="Monk" asp-action="BuddhistLent">
            <i class="material-icons">post_add</i>
            <span class="sidebar-normal">เพิ่มข้อมูลพรรษา </span>
        </a>
    </div>
</div>
@if (Model != null)
{
    <div class="card ">
        <div class="card-body">
            <div class="toolbar">
                <!--        Here you can write extra buttons/actions for the toolbar              -->
            </div>
            <div class="material-datatables">
                <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" width="100%" style="width:100%">
                    <thead>
                        <tr>
                            <th>ปี พ.ศ.</th>
                            <th>เข้าพรรษาวันที่</th>
                            <th>ตรงกับวันที่</th>
                            <th>จำนวนภิกษุ</th>
                            <th>จำนวนสามเณร</th>
                            <th>จำนวนแม่ชี</th>
                            <th>จำนวนอุบาสิกา</th>
                            <th>รวมทั้งหมด</th>
                            <th class="disabled-sorting text-right">Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ปี พ.ศ.</th>
                            <th>เข้าพรรษาวันที่</th>
                            <th>ตรงกับวันที่</th>
                            <th>จำนวนภิกษุ</th>
                            <th>จำนวนสามเณร</th>
                            <th>จำนวนแม่ชี</th>
                            <th>จำนวนอุบาสิกา</th>
                            <th>รวมทั้งหมด</th>
                            <th class="text-right">Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BuddhistLentYear</td>
                                <td>@item.BuddhistLentInFo.Split(',')[0]</td>
                                <td>@item.BuddhistLentInFo.Split(',')[1]</td>
                                <td>@item.MonkCount</td>
                                <td>@item.NoviceCount</td>
                                <td>@item.NunsCount</td>
                                <td>@item.UpasikaCount</td>
                                <td class="text-right">
                                    <a href="/Branch/Edit2Branch/@item.Id"
                                       class="btn btn-link btn-danger btn-just-icon edit"
                                       data-toggle="tooltip" data-placement="top"
                                       title="แก้ไขข้อมูล"><i class="material-icons">handyman</i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}